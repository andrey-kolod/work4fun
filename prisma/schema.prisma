// ============================================================================
// ФАЙЛ: /prisma/schema.prisma
// НАЗНАЧЕНИЕ: Схема базы данных (Data Schema)
// ----------------------------------------------------------------------------
// Этот файл определяет структуру базы данных:
// 1. Какие таблицы будут в базе
// 2. Какие поля в каждой таблице
// 3. Как таблицы связаны между собой
// 
// Prisma использует этот файл для:
// - Создания миграций (изменений в БД)
// - Генерации TypeScript типов
// - Создания клиента для работы с БД
// ============================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  PROJECT_LEAD
  PROJECT_MEMBER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique @db.VarChar(255)
  firstName     String    @db.VarChar(50)
  lastName      String    @db.VarChar(50)
  middleName    String?   @db.VarChar(50)
  passwordHash  String?
  emailVerified Boolean   @default(false)
  phone         String?   @db.VarChar(20)
  role          Role      @default(PROJECT_MEMBER)
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  accounts      Account[]
  sessions      Session[]
  projects      Project[] @relation("ProjectOwner") // Владелец проектов
  userProjects  UserProject[] // Участие в проектах (многие ко многим)

  @@index([email])
  @@index([deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@index([userId])
  @@index([expires])
}

// НОВАЯ МОДЕЛЬ: Связь "многие ко многим" между User и Project
// Это таблица-связка (junction table)
model UserProject {
  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([userId, projectId]) // Составной первичный ключ
  @@index([userId])
  @@index([projectId])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("ACTIVE")
  startDate   DateTime?
  endDate     DateTime?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner       User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  userProjects UserProject[] // Участники проекта
}