// prisma/schema.prisma

// Запуск клиента npx prisma studio
// Применение миграций npx prisma migrate dev --name initial
// Генерация клиента npx prisma generate
// Пересев базы npx prisma migrate reset
// Скрипт для заполнения БД npx prisma db seed


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique @db.VarChar(255)
  firstName     String        @db.VarChar(50)
  lastName      String        @db.VarChar(50)
  middleName    String?       @db.VarChar(50)
  passwordHash  String?
  emailVerified Boolean       @default(false)
  phone         String?       @db.VarChar(20)
  role          Role          @default(PROJECT_MEMBER)
  avatar        String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?
  accounts      Account[]
  projects      Project[]     @relation("ProjectOwner")
  sessions      Session[]
  userProjects  UserProject[]

  emailVerifyToken     String?    @unique
  emailVerifyTokenExp  DateTime?

  @@index([email])
  @@index([deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@index([userId])
  @@index([expires])
}

model UserProject {
  userId    String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, projectId])
  @@index([userId])
  @@index([projectId])
}

model Project {
  id           String        @id @default(cuid())
  name         String
  description  String?
  status       String        @default("ACTIVE")
  startDate    DateTime?
  endDate      DateTime?
  ownerId      String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  owner        User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  userProjects UserProject[]
}

enum Role {
  SUPER_ADMIN
  PROJECT_LEAD
  PROJECT_MEMBER
}
